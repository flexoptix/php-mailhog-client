        "squizlabs/php_codesniffer": "~2.6",
        "friendsofphp/php-cs-fixer": "~1.12",
        "swiftmailer/swiftmailer": "^6.0",
        "php-http/mock-client": "^1.0",
        "php-http/message": "^1.0",
        "guzzlehttp/psr7": "^1.0",
        "symfony/dotenv": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "ThaenyDev\\MailHogClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ThaenyDev\\MailHogClient\\Tests\\Unit\\": "tests/unit/",
            "ThaenyDev\\MailHogClient\\Tests\\Functional\\": "tests/functional/"
        }
    },
    "scripts": {
        "test-unit": "phpunit --testsuite=unit",
        "test-functional": "phpunit --testsuite=functional",
        "test-seed-mailhog": "@php ./tests/functional/seed.php",
        "test": [
            "@test-unit",
            "@test-functional"
