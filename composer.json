    "minimum-stability": "dev",
    "require": {
        "php": ">=7.0",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "psr/http-message": "^1.0",
        "php-http/client-implementation": "^1.0",
